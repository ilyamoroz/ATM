<Window x:Class="ATM.ATM_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM"
        mc:Ignorable="d"
        Title="ATM_Window" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Balance_card_btn" Content="Баланс вашей карты" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Click="Balance_card_btn_Click" Grid.Row="1"/>
        <Button x:Name="Cash_card_btn" Content="Снять деньги с карты" HorizontalAlignment="Left" Margin="10,20,0,0" VerticalAlignment="Top" Click="Cash_card_btn_Click" Grid.Row="1"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Center" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,1.111" Margin="0,170,0,0"/>
        <Label Content="ATM" HorizontalAlignment="Center" Margin="0,108,0,0" VerticalAlignment="Top"/>
        <Label x:Name="Balans_lbl" Content="Баланс:" HorizontalAlignment="Left" Margin="185,168,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
